<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#2C133D"
    android:padding="20dp">

    <!-- Logo -->
    <ImageView
        android:layout_width="109dp"
        android:layout_height="109dp"
        android:src="@drawable/poster_logo"
        android:layout_marginBottom="10dp"/>

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Language"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <!-- Grid Layout for Languages -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_marginTop="10dp">

        <!-- Hindi -->
        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="80dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:layout_margin="8dp"
            android:id="@+id/cardHindi">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#3E1F47"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="हिंदी"
                    android:textSize="22sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hindi"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Marathi -->
        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="80dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:layout_margin="8dp"
            android:id="@+id/cardMarathi">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#3E1F47"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="मराठी"
                    android:textSize="22sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marathi"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- English -->
        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="80dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:layout_margin="8dp"
            android:id="@+id/cardEnglish">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#3E1F47"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="English"
                    android:textSize="22sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Gujarati -->
        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="80dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:layout_margin="8dp"
            android:id="@+id/cardGujarati">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#3E1F47"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ગુજરાતી"
                    android:textSize="22sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gujarati"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tamil -->
        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="80dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:layout_margin="8dp"
            android:id="@+id/cardTamil">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#3E1F47"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="தமிழ்"
                    android:textSize="22sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tamil"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Telugu -->
        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="80dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:layout_margin="8dp"
            android:id="@+id/cardTelugu">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#3E1F47"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="తెలుగు"
                    android:textSize="22sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telugu"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

</LinearLayout>
